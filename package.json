{
  "name": "project-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "dotenv -e ./.env.development.local -- nest start --watch",
    "start:debug": "dotenv -e ./.env.development.local -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "test": "dotenv -e ./.env.test.local -- jest",
    "db:migration:create": "rm ./src/db/migrations/.snapshot.json || dotenv -e ./.env.development.local -- mikro-orm migration:create",
    "db:migration:up:dev": "dotenv -e ./.env.development.local -- mikro-orm migration:up",
    "db:migration:up:test": "dotenv -e ./.env.test.local -- mikro-orm migration:up",
    "db:migration:up:prod": "mikro-orm migration:up --config ./dist/db/db.config.js",
    "db:migration:down:dev": "dotenv -e ./.env.development.local -- mikro-orm migration:down",
    "db:migration:down:test": "dotenv -e ./.env.test.local -- mikro-orm migration:down",
    "db:migration:list": "dotenv -e ./.env.development.local -- mikro-orm migration:list",
    "db:migration:check": "dotenv -e ./.env.development.local -- mikro-orm migration:check",
    "db:migration:pending": "dotenv -e ./.env.development.local -- mikro-orm migration:pending",
    "db:seed:dev": "dotenv -e ./.env.development.local -- mikro-orm seeder:run",
    "db:seed:prod": "mikro-orm seeder:run --config ./dist/db/db.config.js",
    "db:seed:test": "dotenv -e ./.env.test.local -- mikro-orm seeder:run",
    "db:migration:fresh:dev": "dotenv -e ./.env.development.local -- mikro-orm migration:fresh --seed DevDatabaseSeeder",
    "db:migration:fresh:test": "dotenv -e ./.env.test.local -- mikro-orm migration:fresh",
    "db:migration:fresh:ci": "mikro-orm migration:fresh",
    "test:watch": "dotenv -e ./.env.test.local -- jest --watch",
    "test:cov": "dotenv -e ./.env.test.local -- jest --coverage",
    "test:debug": "dotenv -e ./.env.test.local -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./.env.test.local -- jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.485.0",
    "@aws-sdk/s3-request-presigner": "^3.485.0",
    "@metinseylan/nestjs-opentelemetry": "^3.0.0",
    "@mikro-orm/cli": "~6.2.0",
    "@mikro-orm/core": "~6.2.0",
    "@mikro-orm/migrations": "~6.2.0",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "~6.2.0",
    "@mikro-orm/seeder": "~6.2.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.4.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/platform-socket.io": "^10.3.7",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/websockets": "^10.3.3",
    "argon2": "^0.31.2",
    "axios": "^1.7.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "helmet": "^7.1.0",
    "nest-winston": "^1.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "uuidv4": "^6.2.13",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@faker-js/faker": "^8.4.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "^20.14.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pluralize": "^0.0.33",
    "@types/supertest": "^6.0.2",
    "@types/timezoned-date": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-mock-extended": "^3.0.6",
    "lint-staged": "^13.1.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.8.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.4",
    "timezoned-date": "^3.0.2",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "./**/*.ts": "eslint --fix --max-warnings=0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/test/(.*)$": "<rootDir>/test/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/db/db.config.ts"
    ]
  }
}
